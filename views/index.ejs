<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <script type="text/javascript" src="/javascripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="tabbable">
      <ul class="nav nav-tabs">
        <% projects.forEach(function(project, index) { %>
          <li <%= index == 0 ? "class=active" : "" %>>
            <a href="#<%= project %>" data-toggle="tab"><%= project %></a>
          </li>
        <% }) %>
      </ul>
      <div class="tab-content">
        <% projects.forEach(function(project, index) { %>
          <div class="tab-pane <%= index == 0 ? "active" : "" %>" id=<%= project %> >
            <p>
              Logs from <%= project %>
              <a class="restart btn" href='javascript: void(0);'>重启</a>
            </p>
            <textarea class="terminal <%= project %>"></textarea>
          </div>
        <% }) %>
      </div>
    </div>
    <script>
      var socket = io.connect('http://localhost');
      <% projects.forEach(function(project, index) { %>
        socket.on("<%= project %>", function(data) {
          $('.terminal.<%= project %>').append(data.out || data.err)
        });
      <% }) %>

      socket.emit('init_projects', {projects: ["<%= projects %>"]})
    </script>
  </body>
</html>
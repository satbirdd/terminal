html body
  padding: 0 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: #36648B
  color: white

.nav>li>a
  color: white

.nav>li>a:hover
  color: #08c

label
  position: relative
  top: -33px
  border: none
  left: 5px
  width: 800px

input
  background-color: transparent
  border: none
  outline: none
  color: white
  width: 600px

textarea.terminal[readonly]
  width: 800px
  height: 400px
  background-color: #00688B
  color: white

textarea.terminal-interact[readonly]
  width: 800px
  height: 150px
  background-color: #00688B
  color: white